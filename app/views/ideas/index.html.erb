<% @ideas.in_groups_of(3) do |group| # Splits or iterates over the array in groups of size number%>
    <div class="row">
      <% group.compact.each do |idea| # remove nil %>
          <div class="col-md-4">
            <%= image_tag idea.picture_url, width: '50%' if idea.picture.present?%>
            <h4><%= link_to idea.name, idea %></h4>
            <%= idea.description %>
          </div>
      <% end %>
    </div>
<% end %>