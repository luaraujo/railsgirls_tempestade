<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-9">
    <%= image_tag(@idea.picture_url, width: '100%') if @idea.picture.present? %>
    <h3>Comments</h3>
    <% @comments.each do |comment| %>
    <div>
      <strong><%= comment.user_name %></strong>
      <br />
      <p><%= comment.body %></p>
      <p><%= link_to 'Delete', comment_path(comment), method: :delete, data: { confirm: 'Você tem certeza?' } %></p>
    </div>
<% end %>
<%= render 'comments/form' %>
  </div>

  <div class="col-md-3">
    <p><b>Name: </b><%= @idea.name %></p>
    <p><b>Description: </b><%= @idea.description %></p>
    <p>
      <%= link_to 'Editar', edit_idea_path(@idea) %> |
      <%= link_to 'Apagar', @idea, data: { confirm: 'Você tem certeza?' }, method: :delete %> |
      <%= link_to 'Voltar', ideas_path %>
    </p>
  </div>
</div>
